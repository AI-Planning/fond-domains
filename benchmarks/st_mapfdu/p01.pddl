; MAPF/DU corridor problem (FOND version) with 2 agents and 4 nodes
; Author: Thorsten Engesser
(define (problem mapfdu_2_4)
  (:domain mapfdu_2_agents)
  (:objects c00 c01 c02 x01 - pos)
  (:init (adj c00 c01)
         (adj c01 c00) (adj c01 c02) (adj c01 x01)
         (adj c02 c01)
         (adj x01 c01)
         (at a0 c02) (at a1 c01)
         (ind a0 w0 w2) (ind a0 w1 w3) (ind a0 w2 w0) (ind a0 w3 w1)
         (ind a1 w0 w1) (ind a1 w1 w0) (ind a1 w2 w3) (ind a1 w3 w2)
         (goal w0 a0 c00) (goal w0 a1 c01)
         (goal w1 a0 x01) (goal w1 a1 c01)
         (goal w2 a0 c00) (goal w2 a1 c02)
         (goal w3 a0 x01) (goal w3 a1 c02)
         (des w0) (next-choose))
  (:goal (and (stopped a0) (stopped a1))))
